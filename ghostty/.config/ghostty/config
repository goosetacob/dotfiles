# Fonts
font-family = Berkeley Mono Variable
font-size = 16

# Theme
theme = Mathias
cursor-invert-fg-bg = true
window-theme = ghostty

# Window
window-padding-y = 2,0
window-padding-balance = true
window-decoration = false

# Keybindings
keybind = super+shift+i=inspector:toggle
keybind = super+shift+r=reload_config
keybind = super+shift+s=write_scrollback_file:paste

# MacOS
macos-icon-frame = beige

# Other
shell-integration = zsh 
command = zsh --login -c "if command -v tmux >/dev/null 2>&1; then tmux attach-session -t ${USER} || tmux new -s ${USER}; else zsh; fi"
quit-after-last-window-closed= true
shell-integration-features = cursor,sudo,no-title
